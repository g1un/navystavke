include logo

mixin controls()
	.controls.container.clearfix
		.sandwich.controls__sandwich.js-sandwich
			span
		+logo().controls__logo
		.controls__buttons
			form(action='#', method='get').controls__search.js-controls-form
				-var i = 'controls__search'
				input(type='text', name='#{i}-input', id='#{i}-input').controls__search-text.js-controls-input
				label(for='#{i}-reset').controls__search-reset.js-controls-reset
					input(type='reset', name='#{i}-reset', id='#{i}-reset')
				label(for='#{i}-submit').controls__search-submit.js-controls-submit
					img(src='../img/svg/search.svg')
					input(type='submit', name='#{i}-submit', id='#{i}-submit')
			each value in ['favourite', 'random', 'radio']
				a.controls__button(href='#', class='_#{value}')
					img(src='../img/svg/#{value}.svg')